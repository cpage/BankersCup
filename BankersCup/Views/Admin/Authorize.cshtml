
@{
    ViewBag.Title = "Authorization Required";
    Layout = "~/Views/Shared/_HeaderLayout.cshtml";
}

@using (Html.BeginForm()) { 
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div class="form-group">
            @Html.Label("Authorization Code", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Password("authCode", "", new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" id="SaveButton" value="Authorize" class="dark-button" style="width: 100%;"/>
            </div>
        </div>
    </div>
}