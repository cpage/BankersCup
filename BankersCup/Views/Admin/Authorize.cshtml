
@{
    ViewBag.Title = "Authorize";
}

<h2>Authorize</h2>
@using(Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.Label("Authorization Code", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("authCode", new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessage("authCode", "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Authorize" class="btn btn-default" />
            </div>
        </div>
    </div>
}
